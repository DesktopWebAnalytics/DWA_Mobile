						<s:SolidColorStroke weight="1" color="#CCCCCC" />
					</s:stroke>
				</s:Line>
				
				<s:Label text="Logo / Identity by" />
				<s:Label text="Pascal &quot;DaGhostProd&quot; Cataye" color="#FF7D01" click="navTo('http://www.daghostprod.com')" />
				
				<s:Line width="100%">
